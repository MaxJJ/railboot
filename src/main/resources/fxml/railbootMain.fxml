<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lv.rtme.fxui.mainView.RailbootMainController">
   <children>
      <BorderPane maxWidth="-Infinity">
         <center>
            <AnchorPane maxWidth="-Infinity" style="-fx-background-color: #F7FCFF;" BorderPane.alignment="CENTER">
               <children>
                  <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <HBox fx:id="topCenterHBox" prefHeight="130.0" prefWidth="200.0" VBox.vgrow="NEVER" />
                        <HBox spacing="4.0">
                           <children>
                              <TextField fx:id="searchTextField" prefWidth="350.0" promptText="ПОИСК" />
                            <Button fx:id="notOrderedButton" mnemonicParsing="false" prefWidth="100.0" text="Не заказаные" />
                              <Button fx:id="showAllButton" mnemonicParsing="false" onAction="#fillAllItems" prefWidth="100.0" text="Все" />
                              <Pane nodeOrientation="RIGHT_TO_LEFT" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Button fx:id="newButton" alignment="CENTER_RIGHT" mnemonicParsing="false" text="Создать новый" textAlignment="CENTER" />
                                 </children>
                                 <HBox.margin>
                                    <Insets right="4.0" />
                                 </HBox.margin>
                              </Pane>
                           </children>
                           <VBox.margin>
                              <Insets top="4.0" />
                           </VBox.margin>
                        </HBox>
                        <AnchorPane fx:id="tableAnchorPane" VBox.vgrow="ALWAYS">
                           <children>
                              <TableView fx:id="codesOrdersTable" nodeOrientation="LEFT_TO_RIGHT" tableMenuButtonVisible="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                <columns>
                                  <TableColumn fx:id="fileID" maxWidth="-1.0" minWidth="80.0" prefWidth="-1.0" text="ФАЙЛ" />
                                  <TableColumn fx:id="stDispatch" prefWidth="297.0" text="СТАНЦИЯ ОТПРАВЛЕНИЯ" />
                                    <TableColumn fx:id="stDestination" prefWidth="321.0" text="СТАНЦИЯ  НАЗНАЧЕНИЯ" />
                                    <TableColumn prefWidth="75.0" text="ОПИСАНИЕ" />
                                    <TableColumn fx:id="cargo" prefWidth="75.0" text="ГРУЗ" />
                                    <TableColumn fx:id="wagon" prefWidth="75.0" text="ВАГОН" visible="false" />
                                    <TableColumn fx:id="container" prefWidth="75.0" text="КОНТЕЙНЕР" visible="false" />
                                    <TableColumn fx:id="rate" prefWidth="75.0" text="СТАВКА" />
                                </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                           </children>
                           <VBox.margin>
                              <Insets bottom="8.0" />
                           </VBox.margin>
                        </AnchorPane>
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <padding>
                        <Insets bottom="3.0" left="10.0" right="10.0" />
                     </padding>
                  </VBox>
               </children>
            </AnchorPane>
         </center>
         <right>
            <FlowPane fx:id="rightFlowPane" alignment="TOP_CENTER" columnHalignment="CENTER" maxWidth="-Infinity" rowValignment="TOP" style="-fx-background-color: #F0FAFF;" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="8.0" />
               </BorderPane.margin>
            </FlowPane>
         </right>
         <left>
            <VBox fx:id="leftVBox" alignment="TOP_CENTER" maxWidth="-Infinity" prefWidth="200.0" spacing="4.0" style="-fx-background-color: #F0FAFF;">
               <children>
                  <Button fx:id="readButton" layoutX="20.0" layoutY="10.0" maxWidth="180.0" mnemonicParsing="false" prefWidth="170.0" text="Заполнить базу" />
                  <Button fx:id="copyButton" maxWidth="180.0" mnemonicParsing="false" prefWidth="170.0" text="Копировать" />
                  <Button fx:id="copyButton1" layoutX="18.0" layoutY="10.0" maxWidth="180.0" mnemonicParsing="false" prefWidth="170.0" text="Изменить" />
                  <Button fx:id="copyButton11" layoutX="18.0" layoutY="35.0" maxWidth="180.0" mnemonicParsing="false" prefWidth="170.0" text="Сохранить в файл" />
                  <AnchorPane minHeight="20.0" prefWidth="200.0" />
               </children>
               <opaqueInsets>
                  <Insets top="4.0" />
               </opaqueInsets>
               <BorderPane.margin>
                  <Insets top="4.0" />
               </BorderPane.margin>
               <padding>
                  <Insets left="8.0" right="8.0" />
               </padding>
            </VBox>
         </left>
      </BorderPane>
   </children>
</StackPane>
